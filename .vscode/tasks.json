{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Android: Build Debug APK",
      "type": "shell",
      "command": "./gradlew",
      "args": ["assembleDebug"],
      "options": {
        "cwd": "${workspaceFolder}/android"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Android: Install Debug APK",
      "type": "shell",
      "command": "./gradlew",
      "args": ["installDebug"],
      "options": {
        "cwd": "${workspaceFolder}/android"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Android: Clean Build",
      "type": "shell",
      "command": "./gradlew",
      "args": ["clean", "assembleDebug"],
      "options": {
        "cwd": "${workspaceFolder}/android"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Android: View Logs (Logcat)",
      "type": "shell",
      "command": "adb",
      "args": ["logcat", "-s", "SUP:*"],
      "options": {
        "cwd": "${workspaceFolder}/android"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
